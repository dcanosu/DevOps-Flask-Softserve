pipeline {
    agent any

    environment {
        AWS_REGION = 'sa-east-1'
    }

    tools {
        terraform 'terraform'
        ansible 'ansible'
    }

    credentials {
        string(credentialsId: 'github-credentials', variable: 'GIT_CREDENTIALS')
        string(credentialsId: 'ssh-private-key', variable: 'SSH_PRIVATE_KEY')
        string(credentialsId: 'terraform-tfvars', variable: 'TFVARS_FILE')
    }

    stages {
        stage('Checkout SCM') {
            steps {
                checkout([
                    $class: 'GitSCM',
                    branches: [[name: 'origin/lowestpermissionuser']],
                    doGenerateSubmoduleConfigurations: false,
                    extensions: [],
                    userRemoteConfigs: [[
                        credentialsId: 'github-credentials',
                        url: 'https://github.com/dcanosu/DevOps-Flask-Softserve.git'
                    ]]
                ])
            }
        }

        stage('Verify Setup') {
            steps {
                sh 'terraform --version'
                sh 'wsl ansible --version'
            }
        }

        stage('Plan') {
            steps {
                withAWS(credentials: '') { // Si no necesitas credenciales especÃ­ficas de AWS aquÃ­, deja vacÃ­o
                    withCredentials([string(name: 'TFVARS_FILE', variable: 'TFVARS_CONTENT')]) {
                        script {
                            writeFile file: 'infra/terraform.tfvars', text: TFVARS_CONTENT
                        }
                        sh "cd infra && terraform init"
                        sh "cd infra && terraform plan -var-file=terraform.tfvars -var=\"ssh_public_key=${SSH_PUBLIC_KEY}\" -out tfplan"
                    }
                }
            }
        }

        stage('Approval') {
            steps {
                input message: 'Approve Terraform plan?', ok: 'Proceed to Apply'
            }
        }

        stage('Apply') {
            steps {
                withAWS(region: env.AWS_REGION, credentials: '') { // AsegÃºrate de tener configuradas las credenciales de AWS en Jenkins
                    sh "cd infra && terraform apply -input=false tfplan"
                }
            }
        }

        stage('Get Terraform Outputs') {
            steps {
                withAWS(region: env.AWS_REGION, credentials: '') {
                    sh 'cd infra && terraform output'
                    script {
                        def ec2_ip = sh(script: 'cd infra && terraform output -raw ec2_public_ip', returnStdout: true).trim()
                        def rds_endpoint = sh(script: 'cd infra && terraform output -raw rds_endpoint', returnStdout: true).trim()
                        echo "EC2 Public IP: ${ec2_ip}"
                        echo "RDS Endpoint: ${rds_endpoint}"
                        // Puedes usar estas variables para Ansible
                        env.EC2_PUBLIC_IP = ec2_ip
                        env.RDS_ENDPOINT = rds_endpoint
                    }
                }
            }
        }

        stage('Ansible: Test Connectivity') {
            steps {
                withCredentials([string(name: 'SSH_PRIVATE_KEY', variable: 'ANSIBLE_PRIVATE_KEY')]) {
                    sh """
                        wsl ansible -i "${env.EC2_PUBLIC_IP}," --private-key="${ANSIBLE_PRIVATE_KEY}" -m ping all
                    """
                }
            }
        }

        stage('Cleanup') {
            steps {
                echo 'Deployment process finished.'
                // Puedes agregar aquÃ­ lÃ³gica para destruir la infraestructura en caso de fallo o a peticiÃ³n
            }
        }
    }

    post {
        always {
            echo 'ðŸ’” Deployment finished.'
        }
        success {
            echo 'ðŸ’š Deployment successful!'
        }
        failure {
            echo 'ðŸ’” Deployment failed. Check logs above.'
        }
    }
}